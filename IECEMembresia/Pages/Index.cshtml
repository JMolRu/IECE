@page
@model IndexModel
@{
    ViewData["Title"] = "Accesos directos";
}

<partial name="_Sidebar" />
<partial name="_Topbar" />

<div class="row p-4 mx-auto">
    <div class="col-sm-3">
        <div class="card border-info text-center acceso-directo">
            <div class="card-header">
                <h5><strong>Personal</strong></h5>
            </div>
            <div class="card-body p-3">
                <img src="~/img/personas.png" alt="Personal bautizado" style="border-radius: 50%; " class="mx-auto card-img-top" />
                Acceso rapido a operaciones con el personal bautizado. <br />
                <a asp-area="" asp-page="#" class="btn btn-sm btn-primary">Ingresar</a>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card border-info text-center acceso-directo">
            <div class="card-header">
                <h5><strong>Alta de personal</strong></h5>
            </div>
            <div class="card-body p-3">
                <img src="~/img/addPerson.png" alt="Agrega personal a la membresia" style="border-radius: 50%; " class="mx-auto card-img-top" />
                Acceso rapido al alta de personal. <br />
                <a asp-area="" asp-page="#" class="btn btn-sm btn-primary">Ingresar</a>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card border-info text-center acceso-directo">
            <div class="card-header">
                <h5><strong>Hogares</strong></h5>
            </div>
            <div class="card-body p-3">
                <img src="~/img/hogares.png" alt="Operaciones con hogares" style="border-radius: 50%; " class="mx-auto card-img-top" />
                Acceso rapido a operaciones con los hogares. <br />
                <a asp-area="" asp-page="#" class="btn btn-sm btn-primary">Ingresar</a>
            </div>
        </div>
    </div>
</div>

<partial name="_Footer" />

